<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?scenebuilder-stylesheet /css/Style.css?>

<VBox alignment="center" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">

        <stylesheets><URL value="@/css/Style.css" /></stylesheets>
        <TextArea fx:id="textArea" editable="false" nodeOrientation="LEFT_TO_RIGHT" scrollLeft="20.0"  wrapText="true" VBox.vgrow="ALWAYS">

    </TextArea>

        <HBox>
            <TextField fx:id="textField" onAction="#sendMsg" promptText="Type a message here..." style="-fx-background-color: linear-gradient(#F0FFFF, #1E90FF);" HBox.hgrow="ALWAYS">
         <font>
            <Font name="Arial Bold" size="13.0" />
         </font></TextField>

            <Button fx:id="sendBtn" onAction="#sendMsg" text="PUSH" />
        </HBox>

 </VBox>
